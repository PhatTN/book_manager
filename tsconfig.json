{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "Viewobjects/*": ["views/*"],
      "Gateways/*": ["domain/gateways/*"],
      "Models/*": ["domain/models/*"],
      "Repositories/*": ["domain/repositories/*"],
      "Errors/*": ["errors/*"],
      "Injection/*": ["injection/*"],
      "Usecases/*": ["usecases/*"],
      "Utils/*": ["utils/*"],
      "Common/*": ["common/*"],
      "Configs/*": ["configs/*"],
      "Apps/*": ["apps/*"],
      "Tests/*": ["tests/*"],
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/*.ts", "src/**/*.ts", "tests/*.ts", "tests/**/*.ts", "src/tests/teardown.js"]
}
